{
  "name": "zenn-metadata-updater-action",
  "version": "1.1.0",
  "private": true,
  "description": "GitHub Action to update metadata in Zenn markdown file.",
  "main": "lib/main.js",
  "scripts": {
    "check:apply": "biome check --apply ./src",
    "check": "biome check ./src",
    "check:ci": "biome ci ./src",
    "package": "ncc build src/main.ts --license licenses.txt",
    "test": "jest",
    "test:ci": "jest --ci --runInBand",
    "ci": "npm run check:ci && npm run test:ci",
    "prerelease": "npm-run-all -l -p build-package test ci"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/korosuke613/zenn-metadata-updater-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "typescript",
    "zenn"
  ],
  "author": "Futa Hirakoba <korosuke613613@gmail.com> (https://korosuke613.github.io/)",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "1.6.0",
    "@actions/exec": "1.1.0",
    "@actions/github": "5.0.0",
    "js-yaml": "4.0.0",
    "yaml-front-matter": "4.1.1",
    "zenn-metadata-updater": "0.3.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.2.2",
    "@types/jest": "27.5.2",
    "@types/node": "17.0.45",
    "@types/yaml-front-matter": "4.1.0",
    "@vercel/ncc": "0.38.0",
    "jest": "27.5.1",
    "jest-junit": "16.0.0",
    "npm-run-all": "4.1.5",
    "ts-jest": "27.1.5",
    "typescript": "4.9.5"
  }
}
